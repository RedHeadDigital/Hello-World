{
  "name": "Hello-World",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node ./build",
    "build": "webpack --config ./config/webpack.config.js",
    "dev": "npm run build && npm start",
    "test": "mocha --opts test/mocha.opts",
    "fmt:js": "prettier --write --single-quote './**/*.js'",
    "fmt": "npm run fmt:js",
    "precommit": "lint-staged"
  },
  "repository": "https://github.com/RedHeadDigital/Hello-World.git",
  "author": "Mark White <mark@redheaddigital.co.uk>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "helmet": "^3.10.0",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "expect": "^22.2.0",
    "lint-staged": "^6.1.0",
    "mocha": "^3.0.0",
    "prettier": "^1.10.2",
    "supertest": "^3.0.0",
    "webpack": "^3.10.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote",
      "git add"
    ],
    "*.json": [
      "prettier --write --single-quote",
      "git add"
    ]
  }
}
